<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please login with the developer authorised test client: \n username: showofftest \n password: showofftest1"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Press back if button doesnt respond"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/login_with_instagram"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/login_with_instagram"
        android:layout_marginTop="50dp" />#

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/code_link"
        android:layout_gravity="bottom|center_horizontal"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="15dp"
        android:layout_marginTop="50dp" />

</LinearLayout>
